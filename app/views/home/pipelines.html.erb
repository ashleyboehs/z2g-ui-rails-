<%= render 'progress_nav', steps: steps %>

<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <% if @workspace %>
    <div class="sm:mx-auto sm:w-full sm:max-w-4xl">

      <%= render 'header', workspace: @workspace %>

      <%= render 'project_links' %>

      <div class="flex items-center mb-4">
        <input type="checkbox" id="hide-unselected" class="mr-2" onclick="toggleUnselectedIssues()">
        <label for="hide-unselected" class="text-sm text-gray-700">Only show selected Issues</label>
      </div>

      <%= render 'pipelines_table', workspace: @workspace, pipeline_data: @pipeline_data, github_status_options: @github_status_options %>

      <%= render 'prev_next_buttons', steps: steps %>

    </div>
  <% end %>
</div>
